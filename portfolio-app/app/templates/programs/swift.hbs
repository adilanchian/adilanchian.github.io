<div class="row">
  {{#each cardArray as |card|}}
    <div class="col s12 m6 l3">
      {{#md-card title=card.title
        titleClass="orange-text"
        image=card.image
        id=card.id
        class="hoverable"}}
        {{#md-card-content}}
          {{card.content}}
        {{/md-card-content}}
      {{/md-card}}
    </div>
  {{/each}}
</div>